{
  "name": "hardhat-project",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.1.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.1"
  },
  "scripts": {
    "node": "npx hardhat node",
    "build": "npx hardhat clean && npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "deploy:polygon": "npx hardhat run ./migrations/deploy.js --network polygon",
    "deploy:bsc": "npx hardhat run ./migrations/deploy.js --network bsc",
    "deploy:goerli": "npx hardhat run ./migrations/deploy.js --network goerli",
    "deploy:avax": "npx hardhat run ./migrations/deploy.js --network avax",
    "deploy:localhost": "npx hardhat run ./migrations/deploy.js --network localhost"
  }
